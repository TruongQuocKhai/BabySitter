@model IEnumerable<BabySitter.Models.User>
@{
    ViewBag.Title = "Đăng Nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="padding-small">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="block">
                    <div class="block-header">
                        <h5>Login</h5>
                    </div>
                    <div class="block-body">
                        <a class="lead" href="~/dang-ky">Bạn chưa có tài khoản?</a>
                        <hr>
                        <form action="@Url.Action("Login","User")" method="post">
                            <div class="form-group">
                                <label for="email" class="form-label">Email</label>
                                <input id="id" name="id" type="text" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="password" class="form-label">Mật khẩu</label>
                                <input id="password" name="password" type="password" class="form-control">
                            </div>
                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-sign-in"></i>Đăng Nhập</button>
                            </div>
                            @if (Session[CommonConstantUser.MESSAGE_USER] != null)
                            {
                                <div class="alert alert-danger" role="alert">
                                    @Session[CommonConstantUser.MESSAGE_USER]
                                </div>

                            }
                        </form>
                    </div>
                </div>
            </div>
            </div>
</div>
</section>