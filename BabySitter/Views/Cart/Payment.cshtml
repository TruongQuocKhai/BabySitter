@model List<BabySitter.Models.CartItem>
@{
    ViewBag.Title = "Thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content" style="background-color: #fff9">
    <section class="shopping-cart">
        <div class="container">
            <div class="basket">
                <div class="basket-holder">
                    @if (Model.Count > 0)
                    {
                        <div class="basket-header">
                            <div class="row">
                                <div class="col-5">Product</div>
                                <div class="col-2">Price</div>
                                <div class="col-2">Quantity</div>
                                <div class="col-2">Total</div>
                                <div class="col-1 text-center">Remove</div>
                            </div>
                        </div>
                        <div class="basket-body">
                            <!-- Product-->
                            @foreach (var item in Model)
                            {
                                <div class="item">
                                    <div class="row d-flex align-items-center">
                                        <div class="col-5">
                                            <div class="d-flex align-items-center">
                                                <img src="~/Content/upload/@item.Product.Image" alt="..." class="img-fluid">
                                                <div class="title">
                                                    <a href="detail.html">
                                                        <h5>@item.Product.Name</h5><span class="text-muted">Size: Large</span>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-2"><span>@item.Product.Price.GetValueOrDefault(0).ToString("N0")</span></div>
                                        <div class="col-2">
                                            <div class="d-flex align-items-center">
                                                <div class="quantity d-flex align-items-center">
                                                    <div class="dec-btn">-</div>
                                                    <input type="text" class="txtQuantity quantity-no" data-id="@item.Product.ID" value="@item.Quantity">
                                                    <div class="inc-btn">+</div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-2"><span>@((item.Product.Price.GetValueOrDefault(0) * item.Quantity).ToString("N0"))</span></div>
                                        <div class="col-1 text-center"><i class="delete fa fa-trash"></i></div>
                                    </div>
                                </div>

                            }

                        </div>
                    }
                    else
                    {
                        <span class="alert alert-danger">Chưa có sản phẩm nào trong giỏ hàng</span>
                    }
                </div>

            </div>
        </div>

    </section>
    <section>
        <div class="container">
            <header class="mb-5">
                <h2 class="heading-line">Contact form</h2>
            </header>
            <div class="row">
                <div class="col-md-7">
                    @using (Html.BeginForm("Payment", "Cart", FormMethod.Post))
                    {

                        <form class="custom-form form">
                            <div class="controls">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label for="name" class="form-label">Họ và Tên</label>
                                            <input type="text" name="shipName" id="shipName" placeholder="Nhập Tên" required="required" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label for="surname" class="form-label">Số Điện Thoại</label>
                                            <input type="text" name="mobile" id="mobile" placeholder="Nhập SĐT" required="required" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="email" class="form-label">Email</label>
                                    <input type="email" name="email" id="email" placeholder="Nhập Email" required="required" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="message" class="form-label">Địa Chỉ Nhận Hàng</label>
                                    <textarea rows="4" name="address" id="address" placeholder="Nhập địa chỉ" required="required" class="form-control"></textarea>
                                </div>
                                <button type="submit" class="btn btn-template">Gửi Đơn Hàng</button>
                            </div>
                        </form>

                      
                    }
                </div>
               
            </div>
        </div>
    </section>
