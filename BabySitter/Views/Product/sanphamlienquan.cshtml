
@model IEnumerable<BabySitter.Models.Product>

@foreach (var item in Model)
{
    <div class="item">
        <div class="product is-gray">
            <div class="image d-flex align-items-center justify-content-center">
                <img src="~/Content/upload/@item.Image" alt="product" class="img-fluid">
                <div class="hover-overlay d-flex align-items-center justify-content-center">
                    <div class="CTA d-flex align-items-center justify-content-center"><a href="/them-gio-hang?productId=@item.ID&quantity=1" class="add-to-cart"><i class="fa fa-shopping-cart"></i></a><a href="~/chi-tiet/@item.MetaTitle-@item.ID" class="visit-product active"><i class="icon-search"></i>View</a><a href="#" data-toggle="modal" data-target="#@item.ID" class="quick-view"><i class="fa fa-arrows-alt"></i></a></div>
                </div>
            </div>
            <div class="title">
                <a href="~/chi-tiet/@item.MetaTitle-@item.ID">
                    <h3 class="h6 text-uppercase no-margin-bottom">@item.Name</h3>
                </a><span class="price text-muted">@item.Price.GetValueOrDefault(0).ToString("N0")<sup>đ</sup></span>
            </div>
        </div>
    </div>
}

