@model IEnumerable<BabySitter.Models.Product>

@{
    ViewBag.Title = "Sản phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <h5 class="box-title">Sản phẩm: <a href="@Url.Action("Create", "Products")" class="btn btn-outline-primary btn-rounded">thêm mới</a></h5>
   
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">

                <div class="card-body">
                   
                    <div class="table-responsive">
                       
                        <table class="table table-striped table-bordered first">
                           
                                <thead>
                                    <tr>
                                        <th>Ảnh </th>
                                        <th>Tên</th>
                                        <th>Metatitle</th>
                                        <th>Mô tả</th>
                                        <th>Giá</th>
                                        <th>Danh mục</th>
                                        <th>Ngày đăng</th>
                                        <th>Trạng thái</th>
                                        <td> </td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                           <td><img src="~/Content/upload/@item.Image"  style="width:50px" ></td>
                                            <td>@item.Name</td>
                                            <td>@item.MetaTitle</td>
                                            <td>@item.Description</td>
                                            <td>@item.Price</td>
                                            <td>@item.CategoryID</td>
                                            <td>@item.CreatedDate </td>
                                            <td>@item.Status </td>
                                            <td> <footer class="mr-t-30">
    <a href="@Url.Action("Edit", "Products", new { id=item.ID })" class="btn btn-outline-primary btn-rounded">sửa</a>
    <a href="@Url.Action("Details", "Products", new { id=item.ID })" class="btn btn-outline-primary btn-rounded">Chi Tiết</a>
    <a href="@Url.Action("Delete", "Products", new { id=item.ID })" class="btn btn-outline-primary btn-rounded">Xóa</a>
</footer></td>
                                        </tr>
                                    }
                                    </tbody>
                            
                        </table>
                        
                        </div>
                    
                    </div>
            </div>
        </div>
    
    </div>
 




         