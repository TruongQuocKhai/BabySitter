            @Html.DisplayFor(model => model.CategoryPaint.Name)
        </dd>

        <dt>
            Tên:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Code)
